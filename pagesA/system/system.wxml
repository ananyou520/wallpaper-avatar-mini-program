<view wx:if="{{vuex_user.system==1}}">
    <image class="top-home" style="margin-top:24px;width:28px;height:28px;" src="/static/icon/home.png" data-event-opts="{{[['tap',[['homeClick',['$event']]]]]}}" bindtap="__e"></image>

    <view class="top relative u-flex u-row-around u-p-b-60 u-p-l-30 u-p-r-30">
        <view class="nums">后台管理</view>
    </view>
    <view class="relative bg-white u-p-30 border-bottom">
        <view class="title">数据统计</view>
    </view>
    <view class="grid u-text-center u-flex u-row-between u-flex-wrap u-p-b-40">
        <view class="tab u-flex-col u-row-center">
            <view class="u-p-b-15">
                <text class="num">{{userCount}}</text>
            </view>
            <view>用户数</view>
        </view>
        <view class="tab u-flex-col u-row-center">
            <view class="u-p-b-15">
                <text class="num">{{coverCount}}</text>
            </view>
            <view>作品数</view>
        </view>
        <view class="tab u-flex-col u-row-center">
            <view class="u-p-b-15">
                <text class="num">{{orderCount}}</text>
            </view>
            <view>下载数</view>
        </view>
    </view>
    <view class="relative bg-white u-p-30 border-bottom">
        <view class="title">基本设置</view>
    </view>
    <view class="u-flex u-row-left u-col-center u-flex-wrap u-text-center u-p-t-30 u-p-b-30">
        <view bindtap="__e" class="tab" data-event-opts="{{[ [ 'tap',[ [ 'configClick',['$event'] ] ] ] ]}}">
            <u-icon bind:__l="__l" name="/static/icon/gl.png" size="44" vueId="5ef702e0-2"></u-icon>
            <view class="u-p-t-10">程序配置</view>
        </view>
        <view bindtap="__e" class="tab" data-event-opts="{{[ [ 'tap',[ [ 'noticeClick',['$event'] ] ] ] ]}}">
            <u-icon bind:__l="__l" name="/static/icon/notice.png" size="44" vueId="5ef702e0-3"></u-icon>
            <view class="u-p-t-10">通知管理</view>
        </view>
        <view bindtap="__e" class="tab" data-event-opts="{{[ [ 'tap',[ [ 'bannerClick',['$event'] ] ] ] ]}}">
            <u-icon bind:__l="__l" name="/static/icon/lb.png" size="44" vueId="5ef702e0-4"></u-icon>
            <view class="u-p-t-10">轮播图管理</view>
        </view>
        <view bindtap="__e" class="tab" data-event-opts="{{[ [ 'tap',[ [ 'indexClick',['$event'] ] ] ] ]}}">
            <u-icon bind:__l="__l" name="/static/icon/gywm.png" size="44" vueId="5ef702e0-5"></u-icon>
            <view class="u-p-t-10">首页菜单管理</view>
        </view>
        <view bindtap="__e" class="tab" data-event-opts="{{[ [ 'tap',[ [ 'findClick',['$event'] ] ] ] ]}}">
            <u-icon bind:__l="__l" name="/static/icon/fx.png" size="44" vueId="5ef702e0-6"></u-icon>
            <view class="u-p-t-10">发现页管理</view>
        </view>
        <view bindtap="__e" class="tab" data-event-opts="{{[ [ 'tap',[ [ 'designClick1',['$event'] ] ] ] ]}}">
            <u-icon bind:__l="__l" name="/static/icon/t.png" size="44" vueId="5ef702e0-7"></u-icon>
            <view class="u-p-t-10">壁纸采集</view>
        </view>
    </view>
    <view class="relative bg-white u-p-30 border-bottom">
        <view class="title">内容管理</view>
    </view>
    <view class="u-flex u-row-left u-col-center u-flex-wrap u-text-center u-p-t-30 u-p-b-30">
        <view bindtap="__e" class="tab" data-event-opts="{{[ [ 'tap',[ [ 'userClick',['$event'] ] ] ] ]}}">
            <u-icon bind:__l="__l" name="/static/icon/tx.png" size="44" vueId="5ef702e0-8"></u-icon>
            <view class="u-p-t-10">用户管理</view>
        </view>
        <view bindtap="__e" class="tab" data-event-opts="{{[ [ 'tap',[ [ 'coverClick',['$event'] ] ] ] ]}}">
            <u-icon bind:__l="__l" name="/static/icon/t.png" size="44" vueId="5ef702e0-9"></u-icon>
            <view class="u-p-t-10">作品管理</view>
        </view>
        <view bindtap="__e" class="tab" data-event-opts="{{[ [ 'tap',[ [ 'designClick',['$event'] ] ] ] ]}}">
            <u-icon bind:__l="__l" name="/static/icon/lh.png" size="44" vueId="5ef702e0-10"></u-icon>
            <view class="u-p-t-10">刘海管理</view>
        </view>
    </view>
    <view class="relative bg-white u-p-30 border-bottom">
        <view class="title">类别设置</view>
    </view>
    <view class="u-flex u-row-left u-col-center u-flex-wrap u-text-center u-p-t-30 u-p-b-30">
        <view bindtap="__e" class="tab" data-event-opts="{{[ [ 'tap',[ [ 'categoryClick',['$event'] ] ] ] ]}}">
            <u-icon bind:__l="__l" name="/static/icon/fl.png" size="44" vueId="5ef702e0-11"></u-icon>
            <view class="u-p-t-10">分类管理</view>
        </view>
        <view bindtap="__e" class="tab" data-event-opts="{{[ [ 'tap',[ [ 'tagsClick',['$event'] ] ] ] ]}}">
            <u-icon bind:__l="__l" name="/static/icon/bc.png" size="44" vueId="5ef702e0-12"></u-icon>
            <view class="u-p-t-10">标签管理</view>
        </view>

    </view>
</view>