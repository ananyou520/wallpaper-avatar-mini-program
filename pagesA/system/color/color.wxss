.tab {
    margin: 10rpx;
    width: calc(50% - 20rpx);
}

.tab,.tags_ {
    border-radius: 8rpx;
}

.tags_ {
    background-color: #fff;
    color: #000;
    font-size: 12px;
    line-height: 46rpx;
    padding: 0 20rpx;
}

.tag-active_ {
    animation: tiaobig .8s ease-in-out infinite alternate;
    animation-iteration-count: 1;
    background-image: linear-gradient(100deg,rgba(0,0,0,.3),rgba(0,0,0,.94));
    border: none;
    color: #fff;
}

.border-bottom {
    border-bottom: 1rpx solid #f3f4f6;
}

.banner_img {
    border-radius: 8rpx;
    height: 160rpx;
    margin: 15rpx 15rpx 0;
    width: 100%;
}

.add {
    background-color: #fff;
    border-radius: 120rpx;
    bottom: 300rpx;
    box-shadow: 0 1px 8px #c8c8c8;
    left: 30rpx;
    position: fixed;
}

.add,.add image {
    height: 80rpx;
    width: 80rpx;
}

@-webkit-keyframes tiaobig {
    0% {
        transform: scale(.92);
    }

    25% {
        transform: scale(1.08);
    }

    50% {
        transform: scale(.96);
    }

    75% {
        transform: scale(1.06);
    }

    100% {
        transform: scale(.94);
    }
}

@keyframes tiaobig {
    0% {
        transform: scale(.92);
    }

    25% {
        transform: scale(1.08);
    }

    50% {
        transform: scale(.96);
    }

    75% {
        transform: scale(1.06);
    }

    100% {
        transform: scale(.94);
    }
}