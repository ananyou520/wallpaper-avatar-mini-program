.containe,.imageWrapper,page {
    width: 100%;
    height: 100%;
}
page{
  background: #fff;
}
.imageWrapper {
    position: fixed;
    top: 0;
    left: 0;
}

.imageWrapper image,swiper {
    margin-top: 100px;
    width: 100%;
    height: 100%;
}

.actionView {
    position: fixed;
    bottom: 0;
    display: flex;
    flex-direction: row;
    width: 100%;
    justify-items: center;
    align-items: center;
    height: 40px;
    background-color: hsla(0,0%,100%,.9);
    box-shadow: 0 0 8px rgba(0,0,0,.1);
}

.actionView image {
    width: 50px;
    height: 30px;
}

.backkk {
    margin-left: auto;
    margin-right: 10px;
}

.save {
    border-radius: 18px;
    color: #fff;
    text-align: center;
    line-height: 36px;
    background-color: #3dc2d5;
    padding: 0 10px;
    width: 80px;
    font-size: 14px;
    margin: 0 20px 0 5px;
}

.next,.pre {
    background-color: rgba(0,0,0,.3);
    border-radius: 20px;
    padding: 10px;
}

.back {
    width: 25px;
    height: 25px;
    top: 44px;
    left: 10px;
}

.back,.main {
    position: fixed;
}

.main {
    top: 0;
    left: 0;
}

.next {
    right: 10px;
}

.next,.pre {
    width: 40px;
    height: 40px;
    position: fixed;
    top: 50%;
}

.pre {
    left: 10px;
}