.tag-box {
    display: flex;
    flex-wrap: wrap;
    padding: 16rpx 30rpx;
    width: 750rpx;
}

.tag-box-item {
    background-color: #222;   
    border-radius: 32rpx;
    height: 52rpx;
    line-height: 52rpx;
    margin-right: 14rpx;
    margin-top: 14rpx;
    padding-left: 30rpx;
    padding-right: 30rpx;
}

.wallpaper-info-box {
    flex-wrap: wrap;
    justify-content: space-between;
    padding-right: 30rpx;
    width: 750rpx;
}

.wallpaper-info-box,.wallpaper-info-item {
    display: flex;
    padding-left: 30rpx;
}

.wallpaper-info-item {
    align-items: center;
    background: #222;
    border-radius: 12rpx;
    height: 104rpx;
    margin-top: 20rpx;
    width: 336rpx;
}

.wallpaper-info-item-icon {
    height: 44rpx;
    width: 44rpx;
}

.wallpaper-info-item-text {
    color: #fff;
    font-size: 24rpx;
    margin-left: 20rpx;
}

.user-name {
    color: #699;
    margin-right: 5px;
}